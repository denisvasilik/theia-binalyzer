{
  "name": "binalyzer-view",
  "version": "0.0.0",
  "dependencies": {
    "@theia/core": "^1.4.0",
    "@eclipse-glsp/theia-integration": "0.7.0",
    "@eclipse-glsp/client": "next"
  },
  "devDependencies": {
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "typescript": "^3.9.2"
